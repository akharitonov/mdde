<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Properties>
        <Property name="logPath">${sys:mddeRegLogDir:-target/mdde-logs}</Property>
        <Property name="rollingDebugFileName">mdde-registry-%i</Property>
    </Properties>
    <Appenders>
        <Console name="LogToConsole" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>
        <RollingFile name="RollingDebug"
                     fileName="${logPath}/${rollingDebugFileName}.log"
                     filePattern="${logPath}/${rollingDebugFileName}_%d{yyyy-MM-dd}.log">
            <PatternLayout pattern="[%highlight{%-5level}] %d{DEFAULT} %c{1}.%M() - %msg%n%throwable{short.lineNumber}" />
            <SizeBasedTriggeringPolicy size="15mb" />
            <Policies>
                <SizeBasedTriggeringPolicy />
                <OnStartupTriggeringPolicy />
                <TimeBasedTriggeringPolicy interval="1" modulate="true" />
            </Policies>
        </RollingFile>
    </Appenders>
    <Loggers>
        <Logger name="dev.jcri.mdde" level="debug" additivity="true">
            <AppenderRef ref="LogToConsole"/>
            <AppenderRef ref="RollingDebug"/>
        </Logger>
        <Root level="error">
            <AppenderRef ref="LogToConsole"/>
        </Root>
    </Loggers>
</Configuration>